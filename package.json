{
  "name": "sip-directory",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "etl:fetch": "tsx etl/pipeline.ts",
    "etl:dry-run": "tsx etl/pipeline.ts --dry-run",
    "etl:source": "tsx etl/pipeline.ts --source=",
    "etl:verbose": "tsx etl/pipeline.ts --verbose",
    "scrape:apple": "tsx etl/pipeline.ts --source=scrape-apple-watches",
    "scrape:samsung": "tsx etl/pipeline.ts --source=scrape-samsung-watches",
    "scrape:garmin": "tsx etl/pipeline.ts --source=scrape-garmin-watches",
    "scrape:fitbit": "tsx etl/pipeline.ts --source=scrape-fitbit",
    "scrape:xiaomi": "tsx etl/pipeline.ts --source=scrape-xiaomi",
    "scrape:lg": "tsx etl/pipeline.ts --source=scrape-lg",
    "scrape:lg-thinq": "tsx etl/pipeline.ts --source=scrape-lg-thinq",
    "scrape:samsung-appliances": "tsx etl/pipeline.ts --source=scrape-samsung-appliances",
    "scrape:samsung-smartthings": "tsx etl/pipeline.ts --source=scrape-samsung-smartthings",
    "scrape:irobot": "tsx etl/pipeline.ts --source=scrape-irobot",
    "scrape:wearables": "tsx etl/pipeline.ts --source=scrape-apple-watches --source=scrape-samsung-watches --source=scrape-garmin-watches --source=scrape-fitbit --source=scrape-xiaomi",
    "scrape:appliances": "tsx etl/pipeline.ts --source=scrape-lg --source=scrape-lg-thinq --source=scrape-samsung-appliances --source=scrape-samsung-smartthings --source=scrape-irobot",
    "scrape:all": "pnpm etl:fetch && pnpm scrape:wearables && pnpm scrape:appliances"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.20.0",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@sentry/nextjs": "^8.0.0",
    "axios": "^1.7.0",
    "cheerio": "^1.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.446.0",
    "meilisearch": "^0.41.0",
    "next": "^14.2.0",
    "next-auth": "^4.24.0",
    "playwright": "^1.56.1",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "recharts": "^3.2.1",
    "tailwind-merge": "^2.5.0",
    "tailwindcss-animate": "^1.0.7",
    "typesense": "^2.1.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitest/ui": "^2.1.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "postcss": "^8.4.0",
    "prettier": "^3.3.0",
    "prisma": "^5.20.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
